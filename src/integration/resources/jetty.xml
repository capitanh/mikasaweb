<?xml version="1.0"  encoding="UTF-8"?>
<Configure id="Server" class="org.eclipse.jetty.server.Server">
	<New id="mikasadb" class="org.eclipse.jetty.plus.jndi.Resource">
		<Arg></Arg>
		<Arg>java:/jdbc/mikasadb</Arg>
		<Arg>
			<New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
				<!--
				<Set name="Url">jdbc:mysql://localhost:13306/mikasadb</Set>
				-->
				<Set name="Url">jdbc:mysql://localhost:13306/mikasadb</Set>
				<Set name="User">mikasadb</Set>
				<Set name="Password">mikasadb</Set>
			</New>
		</Arg>
	</New>
	<New id="context" class="org.eclipse.jetty.servlet.ServletContextHandler">
    <Set name="contextPath">/mikasaweb</Set>
  </New>
	<Call name="addConnector">
    <Arg>
      <New id="httpConnector" class="org.eclipse.jetty.server.ServerConnector">
        <Arg name="server">
        	<Ref refid="Server"/>
        </Arg>
        <Set name="port">8888</Set>
      </New>
    </Arg>
  </Call>
</Configure>
